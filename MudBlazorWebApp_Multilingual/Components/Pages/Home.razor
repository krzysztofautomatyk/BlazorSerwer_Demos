@page "/"
@using Microsoft.Extensions.Localization
@inject IStringLocalizer<Home> Localizer

<PageTitle>@Localizer["PageTitle"]</PageTitle>

<MudText Typo="Typo.h3" GutterBottom="true">@Localizer["Welcome"]</MudText>
<MudText Class="mb-8">@Localizer["BuiltWith"]</MudText>

<MudList T="object">
    <MudListItem T="object">
        <MudText Typo="Typo.h5">@Localizer["Framework"]</MudText>
        <MudText Typo="Typo.body1">@Localizer["FrameworkValue"]</MudText>
    </MudListItem>
    <MudListItem T="object">
        <MudText Typo="Typo.h5">@Localizer["UiLibrary"]</MudText>
        <MudText Typo="Typo.body1">@Localizer["UiLibraryValue"]</MudText>
    </MudListItem>
</MudList>

<br />
<MudText Typo="Typo.h5" GutterBottom="true">@Localizer["MultilingualHeader"]</MudText>
<MudText Class="mb-8">@Localizer["MultilingualDesc"]</MudText>
<MudText Typo="Typo.h6">@Localizer["SupportedLanguages"]</MudText>
<MudList T="object">
    <MudListItem T="object">
        <MudText Typo="Typo.body1">@Localizer["LangEnglish"]</MudText>
    </MudListItem>
    <MudListItem T="object">
        <MudText Typo="Typo.body1">@Localizer["LangPolish"]</MudText>
    </MudListItem>
    <MudListItem T="object">
        <MudText Typo="Typo.body1">@Localizer["LangDutch"]</MudText>
    </MudListItem>
</MudList>

<br />
<MudAlert Severity="Severity.Normal">
    @Localizer["MudblazorDocs"]
    <MudLink Href="https://mudblazor.com" Target="_blank" Typo="Typo.body2" Color="Color.Primary">
        <b>@Localizer["MudblazorUrl"]</b>
    </MudLink>
</MudAlert>
